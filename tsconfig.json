{
	"compilerOptions": {
		"target": "esnext",
		"moduleDetection": "force",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"allowJs": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noEmit": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"lib": ["esnext", "dom", "dom.iterable"],
		"paths": {
			"~/*": ["./source/*"],
		},
	},
	"include": ["source"],
}
